<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/error"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:foreground="@drawable/button_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/roomName_textView"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/euclid_circular_bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roomSize_textView"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/euclid_circular_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/roomDescription_textView"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/euclid_circular_medium"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/room_draw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/icon_room_description" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>